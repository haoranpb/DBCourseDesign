					var j = $(this).attr("id");
					console.log(j);
					$.get("/AdminInfo/DeleteCustomer?id=" + $("#c" + j).text(), function (data) {
						if (data == "success") location.reload();
					});
				});
			}

			$("#searchbtn").click(function () {
				var id = $("#search").val();
				console.log(id);
				$.get("/AdminInfo/SearchCustomer?id=" + id, function (data) {
					console.log(id);
					if (data == "no")
						alert("Not found");
					else
						$(window).attr("location", "../AdminInfo/Customersearch?cusid=" + id + "&ID=@ViewBag.ID");
				});
				
			});

		});
