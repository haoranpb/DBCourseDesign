	<script>
		$(document).ready(function () {
			var list = "@ViewBag.itemidstring".split(" ");
			var timelist = "@ViewBag.shopstring".split("%");
			console.log("@ViewBag.shopstring");
			for (var i = 1; i < list.length; i++) {
				$("#i" + i).text(list[i]);
				$("#s" + i).text(timelist[i]);
				$("body").find("#" + i).click(function () {
					var j = $(this).attr("id");
					console.log(j);
					$.get("/AdminInfo/DeleteItem?id=" + $("#i" + j).text(), function (data) {
						if (data == "success")  $(window).attr("location", "../AdminInfo/Item?ID=@ViewBag.ID");
					});
				});
			}
			$("#searchbtn").click(function () {
				var id = $("#search").val();
				console.log(id);
				$.get("/AdminInfo/SearchItem?id=" + id, function (data) {
					console.log(id);
					if (data == "no")
						alert("Not found");
					else
						$(window).attr("location", "../AdminInfo/Itemsearch?itemid=" + id + "&ID=@ViewBag.ID");
				});
				
			});

		});
